<% if user_signed_in? %>
  <% if current_user.role = "admin" || current_user.role = "lecturer"%>
    <li><%=link_to(current_user.fullname, profile_path)%></li>
  <%else%>
    <li><%=link_to(current_user.fullname, "#")%></li>
  <%end%>
<% else %>
  <li><a href="#" class="hidden-phone" rel="popover" data-placement="right" data-trigger="click" data-html="true" data-content="<%=render :text => render('shared/login')%>" title="Continue Your Adventure!">Log In</a></li>
  <li><%=link_to('Get Started', new_user_registration_path)%></li>
<% end %>
<% if controller.controller_name != 'pages'%>
  <li><%=link_to('About Us', team_path)%></li>
<%end%>
<% if controller.controller_name != 'subjects'%>
  <li><%=link_to('Subjects',subjects_path)%></li>
<%end%>
