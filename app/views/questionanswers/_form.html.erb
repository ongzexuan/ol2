<%= simple_form_for(@questionanswer) do |f| %>
  <% if @questionanswer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@questionanswer.errors.count, "error") %> prohibited this questionanswer from being saved:</h2>

      <ul>
      <% @questionanswer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <fieldset>
      <%= f.association :checkpoint, label_method: :checkpoint, placeholder: "Checkpoint", input_html:{class: "input-block-level el"}, label: false%>
