<div class="tab-pane active fade in" id="seab">
  <%@subject.seab_topics.each do |topic|%>
    <hr>
    <h3><%=topic.topic%>
    <% if user_signed_in? %>
      <% if current_user.role = "admin" || current_user.role = "lecturer"%>
      <div class="btn-group pull-right">
        <%=link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_seab_topic_path(topic), :class => "btn"%>
        <%=link_to '<i class="icon-trash"></i>'.html_safe, seab_topic_path(topic), :method => :delete, :confirm => "CONFIRM DELETE: 'Do or do not. There is no try.'", :class => "btn btn-danger"%>
      </div><!--btngroup-->
      <%end%>
    <%end%>
  </h3>
  <h6><small><%=topic.description%></small></h6>
  <%topic.seab_sub_topics.each do |sub_topic|%>
    <p><%=sub_topic.topic%>
      <% if user_signed_in? %>
      <% if current_user.role = "admin" || current_user.role = "lecturer"%>
      <div class="btn-group pull-right">
        <%=link_to '<i class="icon-pencil"></i> Edit'.html_safe, edit_seab_sub_topic_path(sub_topic), :class => "btn"%>
        <%=link_to '<i class="icon-trash"></i>'.html_safe, seab_sub_topic_path(sub_topic), :method => :delete, :confirm => "CONFIRM DELETE: 'Do or do not. There is no try.'", :class => "btn btn-danger"%>
      </div><!--btngroup-->
    <%end%>
    <%end%>
    </p>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <% if user_signed_in? %>
          <% if current_user.role = "admin" || current_user.role = "lecturer"%>
            <th></th>
          <%end%>
        <%end%>
        <th><i class="icon-lesson"></i> Lesson</th>
        <th><i class="icon-checkpoint"></i> Checkpoints</th>
        <% if user_signed_in? %>
          <% if current_user.role = "admin" || current_user.role = "lecturer"%>
            <th class="alignright">Modify</th>
          <%end%>
        <%end%>
      </tr>
    </thead>
  <tbody>
      <%sub_topic.topics.order("position").each do |sub_topic|%>
        <%=content_tag_for :tr, sub_topic do%>
        <% if user_signed_in? %>
          <% if current_user.role = "admin" || current_user.role = "lecturer"%>
            <td><span class="handle" style="cursor:ns-resize"><i class="icon-sort"></i></span></td>
          <%end%>
        <%end%>
        <td><%=link_to sub_topic.topic, topic_path(sub_topic)%></td>
        <td><%=sub_topic.checkpoints.count%></td>
        <% if user_signed_in? %>
          <% if current_user.role = "admin" || current_user.role = "lecturer"%>
            <td>
              <div class="btn-group pull-right">
                <%=link_to('<i class="icon-pencil"></i> Edit'.html_safe, edit_topic_path(topic), :class => "btn")%>
                <%=link_to('<i class="icon-trash"></i>'.html_safe, topic_path(topic), :method => :delete, :confirm => "CONFIRM DELETE: 'Do or do not. There is no try.'",:class => "btn btn-danger")%>
              </div><!--btngroup-->
            </td>
          <%end%>
        <%end%>
      <%end%>
    </tbody>
    <%end%>
  </table>
  <%end%>
<%end%>
</div><!--tabpane-->
