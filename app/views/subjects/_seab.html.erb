<div class="tab-pane active fade in" id="seab">
  <div class="row-fluid">
    <div class="span8 offset4">
  <h4>This is a good place to start!</h4>
  <h5>In this mode, lectures are arranged according to the <a href="#">subject syllabus</a> provided by the Singapore Examinations and Assessment Board (<abbr>SEAB</abbr>). This means it's likely to be close to something you'd see in school.</h5>
</div>
  </div><!--row-->
  <div class="accordion" id="syllabus">
  <%@subject.seab_topics.each do |topic|%>
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#syllabus" href="#<%=topic.id%>">
          <%=topic.topic%>
        </a>
      </div><!--accordionheading-->
      <div id="<%=topic.id%>" class="accordion-body collapse">
        <div class="accordion-inner">
            <p class="muted" style="font-size:0.9em"><%=topic.description%></p>
            <%topic.seab_sub_topics.each do |sub_topic|%>
            <table class="table table-hover table-condensed sortable" data-update-url=<%=sort_topics_url%>>
              <caption class="alignleft"><%=sub_topic.topic%></caption>
              <tbody>
                <%sub_topic.topics.order("position").each do |sub_topic|%>
                  <%=content_tag_for :tr, sub_topic do%>
                  <% if user_signed_in? %>
                    <% if current_user.role = "admin" || current_user.role = "lecturer"%>
                      <td><span class="handle"><i class="icon-sort"></i></span></td>
                    <%end%>
                  <%end%>
                  <td style="width:400px;"><%=link_to sub_topic.topic, topic_path(sub_topic)%></td>
                  <td>
                    <%=sub_topic.lessons.count%> Lessons
                  </td>
                  <% if user_signed_in? %>
                    <% if current_user.role = "admin" || current_user.role = "lecturer"%>
                      <td>
                        <div class="btn-group pull-right">
                          <%=link_to('<i class="icon-pencil"></i>'.html_safe, edit_topic_path(topic), :class => "btn btn-small")%>
                          <%=link_to('<i class="icon-trash"></i>'.html_safe, topic_path(topic), :method => :delete, :confirm => "CONFIRM DELETE: 'Do or do not. There is no try.'",:class => "btn btn-danger btn-small")%>
                        </div><!--btngroup-->
                      </td>
                    <%end%>
                  <%end%>
                <%end%>
              </tbody>
              <%end%>
            </table>
            <%end%>
        </div><!--accordioninner-->
      </div><!--accordionbody-->
    </div><!--accordiongroup-->
  <%end%>
  </div><!--accordion-->
</div><!--tabpane-->

<%if user_signed_in?%>
  <%if current_user.role = "admin" || current_user.role = "lecturer"%>
    <%content_for :javascripts do%>
      <%=javascript_include_tag "jquery-ui-1.9.1.custom.min"%>
      <%=javascript_include_tag "sortable.js"%>
    <%end%>
  <%end%>
<%end%>
