<%=render 'shared/head'%>
<body>
  <nav class="meny">
    <ul id="nav" class="nav nav-list">
    <%=render 'shared/start'%>
    <% if content_for?(:sidebar) %>
      <%=yield :sidebar %>
    <%end%>
    <% if user_signed_in? %>
      <%=render 'shared/navmanage'%>
    <%end%>
    <%=render 'shared/last'%>
    </ul>
  </nav><!--meny-->
  <div class="meny-arrow hidden-phone"><h2><i class="icon-caret-right icon-large"></i></h2></div>
  <div class="container-fluid">
    <div class="page-alert">
      <%= bootstrap_flash %>
      <!--[if lt IE 7]>
        <div class="alert">
        You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.
        </div>
      <![endif]-->
    </div><!--page-alert-->
    <div class="row-fluid">
    <div class="span8 offset2 marginbot-h1">
    <% if content_for?(:header) %>
      <div class="aligncenter margintop-h1">
        <%=yield :header %>
      </div>
    <%end%>
    <% if content_for?(:slogan) %>
      <div class="aligncenter">
        <h1><%=yield :slogan %></h1>
      </div>
    <%end%>
    <% if content_for?(:description) %>
      <h3 class="cmun">
        <%=yield :description %>
      </h3>
    <%end%>
    <%=yield%>
    </div><!--span8-->
    </div><!--row-->
    <%=render 'shared/footer' %>
  </div><!--containerfluid-->

  <%=jquery_include_tag :google%>
  <%#=jquery_ui_include_tag :google%>
  <%=javascript_include_tag 'application'%>
  <%= yield :javascripts %>
  <% if user_signed_in? %>
    <% if current_user.role = "admin"%>
      <script>
        $(document).ready(function() { $(".el").select2(); });
      </script>
    <%end%>
  <%end%>
  <script>
    enquire.register("screen and (max-width:768px)", {
        match : function() {
          $('#nav').unwrap();
          $(function () {
            $('#nav').tinyNav();
          });
        }
    }).register("screen and (min-width:769px)", {
        match : function() {
          Meny.create({
            menuElement: document.querySelector( '.meny' ),
            contentsElement: document.querySelector( '.container-fluid' ),
            position: 'left',
            width: 57,
            threshold: 100
          });
        }
    }).listen();
  </script>
</body>
</html>
