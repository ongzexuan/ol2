<%title "SEAB Topics"%>
<h1>SEAB Topics</h1>
<hr>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><i class="icon-lesson"></i> SEAB Topic</th>
      <th><i class="icon-subject"></i> Subject</th>
      <th><i class="icon-checkpoint"></i> Description</th>
    </tr>
  </thead>
  <tbody class="list">
  <%@seab_topics.each do |s|%>
    <tr>
      <td class="seab_topic"><%=link_to s.topic, seab_topic_path(s)%></td>
      <td class="subject"><%=s.subject.subject%></td>
      <td class="description"><%=truncate(s.description, length: 40)%></td>
    </tr>
  <%end%>
  </tbody>

</table>
<br />

<%= link_to 'New Seab topic', new_seab_topic_path %> <br />
<%= link_to "Import", import_seab_topics_path%>
