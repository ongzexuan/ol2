<%title @topic.topic%>
<h1><%=@topic.topic%></h1>
<hr>
<div id="checkpoints-list">
<input type="search" class="search input-block-level" placeholder="Filter List">
<table class="table table-hover table-condensed">
<thead>
    <tr>
      <th><a href="#" data-sort="title">Lessons</a></th>
    </tr>
</thead>
<tbody>
<%@topic.lessons.each do |lesson|%>
    <tr>
      <td><%=link_to lesson.lesson, lesson_path(lesson)%></td>
    </tr>
<%end%>
</tbody>
</table>

<%content_for :javascripts do%>
  <%=javascript_include_tag "list.min"%>
  <script>
  var options = {
      valueNames: ['title']
  };

  var topicList = new List('checkpoints-list', options);
  </script>
<%end%>
