<%= simple_form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>
      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%=f.association :subject, label_method: :subject, value_method: :id, input_html: {class: "input-block-level el"}, label: false, placeholder: "Subject"%>
  <%= f.text_field :topic, class: "input-block-level", placeholder: "Topic Name"%>
  <%= f.text_area :description, class: "editor input-block-level", rows: "6", placeholder: "Description" %>
  <hr>
  <%= f.submit "Save", id: "submit", class: "btn btn-block"%>
<% end %>

<%-content_for :javascripts do%>
  <script>
      $(document).ready(function() { $(".el").select2(); });
  </script>
<%-end%>

