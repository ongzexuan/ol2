<%- title "Sign Up" %>
<h1>Start Your Adventure</h1>
<hr>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:data => {:persist => "garlic"}}) do |f| %>
<div class="page-alert">
    <%= devise_error_messages! %>
</div><!--pagealert-->
<div class="controls controls-row">
    <%= f.email_field :email, class: "input-block-level aligncenter", placeholder: "Email", required: "required"%>
</div><!--controls-->
<div class="controls controls-row">
    <%= f.password_field :password, class: "input-block-level aligncenter", placeholder: "Password", required: "required"%>
</div><!--controls-->
<div class="controls controls-row">
    <%= f.text_field :school, id: "autocomplete_school", class: "input-block-level aligncenter", placeholder: "School", 'data-provide' => 'typeahead', :items => "4", :minLength => "3"%>
</div><!--controls-->
<%= f.submit "Sign Up", class: "btn btn-block", 'data-loading-state' => 'Working Magic'%>
<% end %>
<hr>
<%content_for :javascripts do%>
<script>
$(document).ready(function() {
        $('#autocomplete_school').typeahead({source: <%= File.read('app/assets/json/schools.json').html_safe %>});
    });
</script>
<%end%>