<%title "Manage Users"%>
<h1>Users</h1>
<hr>
<div id="user-list">
<input type="search" class="search input-block-level" placeholder="Filter List">
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><a href="#" data-sort="name">Name</a></th>
      <th><a href="#" data-sort="email">Email</a></th>
    </tr>
  </thead>
  <tbody class="list">
  <%@users.each do |u|%>
    <tr>
      <td class="name"><%=u.fullname%></td>
      <td class="email"><%=u.email%></td>
    </tr>
  <%end%>
  </tbody>
</table>
</div>

<%content_for :javascripts do%>
<%=javascript_include_tag "list.min"%>
<script>
var options = {
    valueNames: ['name','email']
};

var userList = new List('user-list', options);
</script>
<%end%>
