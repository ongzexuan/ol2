<%title "Manage Users"%>
<h1>Users</h1>
<div id="user-list">
<input type="search" class="search aligncenter span10 offset1" style="margin-bottom:1.414em" placeholder="Filter List">
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody class="list">
  <%@users.each do |u|%>
    <tr>
      <td class="name"><%=u.fullname%></td>
      <td class="email"><%=u.email%></td>
    </tr>
  <%end%>
  </tbody>
</table>
</div>

<%content_for :javascripts do%>
<script>
var options = {
    valueNames: ['name','email']
};

var userList = new List('user-list', options);
</script>
<%end%>
