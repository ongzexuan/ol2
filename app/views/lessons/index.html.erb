<%title "Lessons"%>
<h1>Lessons</h1>
<hr>
<div id="lesson-list">
<input type="search" class="search input-block-level" placeholder="Filter List">
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><a href="#" data-sort="title">Lesson</a></th>
      <th><a href="#" data-sort="topic">Topic</a></th>
      <th><a href="#" data-sort="lecturer">Lecturer</a></th>
      <th>Functions</th>
    </tr>
  </thead>
  <tbody class="list">
    <%@lessons.each do |lesson| %>
      <tr>
        <td class="title"><%=link_to(lesson.lesson,lesson)%></td>
        <td class="topic"><%= lesson.topic.topic %></td>
        <td class="lecturer"><%= lesson.user.fullname %></td>
        <td>
          <div class="btn-group">
          <%=link_to("Edit",edit_lesson_path(lesson), class: "btn btn-mini")%>
          <%=link_to("Delete", lesson, method: :delete, class: "btn btn-mini btn-danger")%>
          </div>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
</div><!--lessonlist-->

<%content_for :javascripts do%>
<%=javascript_include_tag "list.min"%>
<script>
var options = {
    valueNames: ['title','topic','lecturer']
};

var lessonList = new List('lesson-list', options);
</script>
<%end%>
